<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
  <body>

  
<div class="container mt-5">
  <h1 class="responsetitle">Weather and Headline News</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3"> <i class="fas fa-sun"> </i></div>
    <div class="col-md-3"> <i class="fas fa-cloud"> </i></div>
    <div class="col-md-3"> <i class="fas fa-wind"> </i></div>
    <div class="col-md-3"> <i class="fas fa-cloud-rain"> </i></div>
  </div>
  <div class="row">
    <div class="col-md-12">
    <p>
      <h3 class="firstresponse">In <%= @location %>, it is currently <%= @current_temperature %> degrees with <%= @current_conditions %> conditions.</h3>
      <h4 class="extended">The extended forecast is </h4>
    </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">  
      <% for extended in @day %>  
        <div class="row"> 
          <div class="col-md-2">
            <%= Time.at(extended["time"]).strftime("%a, %b %d") %>
          </div>   
          <div class="col-md-8"> 
            A high of <%= extended["temperatureHigh"] %> degrees with the following conditions: <%= extended["summary"] %> 
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>

###################
<div class="container">
  <div class="row">
    <div class="col-md-3"> <i class="far fa-newspaper"></i></div>
    <div class="col-md-9"> </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3 class="firstresponse">In <%= @location %>, the top news stories are:</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">  
      <% for article in @headlines %> 
        <div class="row"> 
          <div class="col-md-2">
            <%= article["title"]%>
          </div>   
          <div class="col-md-6"> 
            <%= article["content"]%>
          </div>
          <div class="col-md-2"> 
            <a href="<%= article["url"] %>"> <%= article["url"] %></a>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>



###################



<div class="container">  
  <a href="/" class="btn btn-secondary">Search New Location</a>
</div>
   

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
